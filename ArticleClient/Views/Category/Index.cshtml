

<div class="content" ng-controller="myCtrl">
    <div class="container">
        <div class="row">

            <div class="col-sm-12">

                <div class="col-sm-12">
                    <div class="col-sm-12" style="padding-top:15px;">
                        <label><h4 style="border:solid 2px blue; border-radius:5px; padding:10px">ប្រភេទនៃអត្ថបទទាំងអស់</h4></label>
                        <input type="button" value="បង្កើតថ្មី" ng-click="setCatHeader()"  class="btn btn-success pull-right" data-toggle="modal" data-target="#CatModal" style="padding-top:10px;" />
                    </div>
                    <div class="col-sm-6 form-inline" style="padding-bottom:10px;">
                        <label class="control-label">បង្ហាញ</label>
                        <select class="form-control">
                            <option value="value">5</option>
                            <option value="value">10</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-inline pull-right">
                            <label class="control-label">ស្វែងរក</label>
                            ​<input type="text" class="form-control" name="txtSearchUser" placeholder="ស្វែងរក" />
                        </div>
                    </div>
                </div>
                <div class="card-box">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>លេខរៀង</th>
                                <th>ឈ្មោះ</th>
                                <th>ពិពណ៏នា</th>
                                <th>សកម្មភាព</th>
                            </tr>
                        </thead>


                        <tbody>
                            <tr ng-repeat="cat in categories">
                                <td>{{$index+1}}</td>
                                <td>{{cat.name}}</td>
                                <td>{{cat.description}}</td>
                                <td>
                                    ​​<input type="button" value="លុប" class="btn btn-danger btn-sm" ng-click="deleteCategory(cat.id)">
                                    <input type="button" ng-click="getCat(cat.id)" value="កែប្រែ" class="btn btn-primary btn-sm"  data-toggle="modal" data-target="#CatModal">
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div> <!-- container -->
    <!-- Modal -->
    <div id="CatModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" id="close" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" ng-bind="cat_header"></h4>
                </div>
                <div class="modal-body">

                    <form class="form-horizontal group-border-dashed">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ឈ្មោះ</label>
                            <div class="col-sm-9">
                                <input type="hidden" ng-model="cat_id"/>
                                <input type="text" ng-model="cat_name" class="form-control" placeholder="បញ្ចូលឈ្មោះ" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ពិព័រនា</label>
                            <div class="col-sm-9">
                                <input type="text" ng-model="cat_des" class="form-control" placeholder="បញ្ចូលពិព័រនា" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="saveCategory()" class="btn btn-primary">រក្សារទុក</button>
                </div>
            </div>

        </div>
    </div>
   
</div> <!-- content -->
