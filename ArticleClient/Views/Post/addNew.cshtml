<div ng-controller="myCtrl">


<!-- Modal -->
<div id="CatModal" class="modal fade" role="dialog" >
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" id="close" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">បង្កើតប្រភេទអត្តបទ</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal group-border-dashed">
          <div class="form-group">
            <label class="col-sm-2 control-label">ឈ្មោះ</label>
            <div class="col-sm-9">
              <input type="text" ng-model="cat_name" class="form-control" placeholder="បញ្ចូលឈ្មោះ" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">ពិព័រនា</label>
            <div class="col-sm-9">
              <input type="text" ng-model="cat_des" class="form-control" placeholder="បញ្ចូលពិព័រនា" />
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" ng-click="saveCat()" class="btn btn-primary">រក្សារទុក</button>
      </div>
    </div>

  </div>
</div>


<div class="content">
  <div class="container">
    
    <div class="col-lg-12">
      <label><h4 style="border:solid 2px blue; border-radius:5px; padding:10px">បន្ថែមព័ត៌មានថ្មី</h4></label>
    </div>
   
    <div class="col-lg-12" style="padding-bottom:10px">
      <form class="form-inline">
        <div class="form-group">
          <label>ដាក់ចំណងជើងអត្ថបទ</label>
          <input type="text"  ng-model="title" placeholder="បញ្ចូលចំណងជើងអត្ថបទ" class="form-control"/>
        </div>
        <div class="form-group" style="margin-left:50px;">
          <label>ប្រភេទនៃអត្តបទ</label>
          <!--<input type="text" ng-model="cat_article"  placeholder="បញ្ចូលប្រភេទនៃអត្តបទ" class="form-control"/>-->
          <select name="" id="" ng-model="cat_id" class="form-control">
            <option value="">ជ្រើសរើស</option>
            <option ng-repeat="item in categories" value="{{item.id}}">{{item.name}}</option>
          </select>
          <input type="button" value="បង្កើតថ្មី" class="btn btn-success" data-toggle="modal" data-target="#CatModal"/>
        </div>
        <div class="form-group pull-right">
          <label>ប្រភពនៃអត្តបទ</label>
          <input type="text" ng-model="author"​ placeholder="បញ្ចូលប្រភពនៃអត្តបទ" class="form-control"/>
        </div>
       </form>
    </div>
    <div class="col-lg-12">
      <textarea id="editor1"  name="editor1"></textarea>
    </div>
      <div class="col-lg-12" style="padding-top:10px">
        <input type="button"  class="btn btn-md btn-primary pull-right" ng-click="savePost()" value="រក្សារទុក"/>
      </div>

    <script type="text/javascript">
      CKEDITOR.replace('editor1', {
      filebrowserBrowseUrl: '/post/uploadPartial',
      filebrowserUploadUrl: '/post/uploadnow'
      });


      function updateValue(id, value) {
      document.getElementById(id).value = value;
       // get image in java script 
       angular.element(document.getElementById('wrapper')).scope().getUrlImage(value);

      }


    </script>
  </div>

 
</div>
</div>