
@{
    ViewBag.Title = "Page";
}
<div class="content" ng-controller="myCtrl">
    <div class="container">
        <div class="row">

            <div class="col-sm-12">

                <div class="col-sm-12">
                    <div class="col-sm-12" style="padding-top:15px;">
                        <label><h4 style="border:solid 2px blue; border-radius:5px; padding:10px">ទំព័រទាំងអស់</h4></label>
                        <a href="/page/addnewpage" class="btn btn-success pull-right" style="padding-top:10px;">បង្កើតថ្មី</a>
                    </div>
                    <div class="col-sm-6 form-inline" style="padding-bottom:10px;">
                        <label class="control-label">បង្ហាញ</label>
                        <select class="form-control">
                            <option value="value">5</option>
                            <option value="value">10</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-inline pull-right">
                            <label class="control-label">ស្វែងរក</label>
                            ​<input type="text" class="form-control" name="txtSearchUser" placeholder="ស្វែងរក" />
                        </div>
                    </div>
                </div>
                <div class="card-box">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>លេខរៀង</th>
                                <th>ចំណងជើងទំព័រ</th>
                                <th>ថ្ងៃខែឆ្នាំ</th>
                                <th>អ្នកបង្កើត</th>
                                <th>សកម្មភាព</th>
                            </tr>
                        </thead>


                        <tbody>
                            <tr ng-repeat="page in pages">
                                <td>{{$index+1}}</td>
                                <td>{{page.title}}</td>
                                <td>{{page.created_date}}</td>
                                <td>{{page.user_name}}</td>
                                <td>
                                    ​​<input type="button" ng-click="deletePage(page.id)" value="លុប" class="btn btn-danger btn-sm">
                                    <input type="button" ng-click="editPage(page.id)" value="កែប្រែ" class="btn btn-primary btn-sm">
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div> <!-- container -->
  

</div> <!-- content -->
